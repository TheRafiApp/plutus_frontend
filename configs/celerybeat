
# export environment
export plutus_environment="staging"

# Absolute or relative path to the 'celery' command:
CELERY_BIN="/var/www/app/api/env/bin/celery"

# Where to chdir at start.
CELERYBEAT_CHDIR="/var/www/app/api"

# app instance to user
CELERY_APP="api.celery"

# full path to the celery beat logfile
CELERYBEAT_LOG_FILE="/var/www/app/api/logs/celery_beat.log"

# log level to user for celerybeat
CELERYBEAT_LOG_LEVEL="info"

# user to run beat as
CELERYBEAT_USER="celery"

# group to run beat as
CELERYBEAT_GROUP="www-data"

# Absolute or relative path to the 'celery' command:
CELERY_BIN="/var/www/app/api/env/bin/celery"

# Extra arguments to celerybeat
CELERYBEAT_OPTS="--schedule=./data/celerybeat-schedule"